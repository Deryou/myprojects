<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.mr.detector.ui.fragment.EquipmentFragment">

    <com.mr.detector.widget.DampingScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentBgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="委托单位:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_company"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_oval_shape"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="器具名称:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_equip_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/white_background_oval_shape"
                    android:text="温度检测器"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="生产厂商:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_manufacturer"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_oval_shape"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="出厂编号:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_factory_serial_num"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_oval_shape"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="型号规格:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_equip_type"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_oval_shape"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="设备编号:"
                    android:textSize="@dimen/sp_18"/>

                <EditText
                    android:id="@+id/form_equip_number"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background_oval_shape"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

        </LinearLayout>
    </com.mr.detector.widget.DampingScrollView>
</FrameLayout>
